<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/YesterdaysWeight"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="629dp"
        android:ems="10"
        android:inputType="text"
        android:text="Yesterdays Weight"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TodaysWeightInput"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="566dp"
        android:ems="10"
        android:hint="Enter Todays weight"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/DatePopulate"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="503dp"
        android:ems="10"
        android:inputType="date"
        android:text="Date"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/CalculatePoundsToGoal"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="317dp"
        android:layout_marginBottom="369dp"
        android:ems="10"
        android:inputType="number"
        android:text="Pounds to Goal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/DisplayStartWeight"
        android:layout_width="211dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="438dp"
        android:ems="10"
        android:inputType="number"
        android:text="Starting Weight"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
